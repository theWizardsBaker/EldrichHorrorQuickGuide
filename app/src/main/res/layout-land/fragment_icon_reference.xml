<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.justin_letourneau.eldrichhorrorquickguide.IconReferenceFragment"
    android:baselineAligned="false"
    android:isScrollContainer="true">
    <ScrollView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:scrollbars="vertical"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="100dp">
            <com.justin_letourneau.eldrichhorrorquickguide.EldritchDescriptionTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/game_reference"
                android:id="@+id/icon_title_textView"
                style="@style/EldrichHeadding"
                android:textSize="30sp"
                android:textIsSelectable="true"
                android:layout_centerHorizontal="true"
                android:textStyle="italic"
                android:layout_marginTop="15dp" />
            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="false"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:id="@+id/tableLayout"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/icon_title_textView">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.justin_letourneau.eldrichhorrorquickguide.EldritchDescriptionTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/icon_ref_player_count"
                        android:id="@+id/textView"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:padding="5dp" />
                    <com.justin_letourneau.eldrichhorrorquickguide.EldritchDescriptionTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/icon_ref_spawn_gates"
                        android:id="@+id/textView2"
                        android:padding="5dp" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="70dp"
                            android:id="@+id/imageView3"
                            android:src="@drawable/reference_investigator" />
                        <Spinner
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/player_count_spinner"
                            android:spinnerMode="dialog"
                            style="@style/IconText"
                            android:paddingLeft="30dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:id="@+id/imageView4"
                            android:src="@drawable/reference_gate" />
                        <com.justin_letourneau.eldrichhorrorquickguide.EldritchDescriptionTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="3"
                            android:id="@+id/gate_number_textView"
                            style="@style/IconText"
                            android:paddingLeft="30dp"
                            android:shadowColor="#ffffff" />
                    </LinearLayout>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.justin_letourneau.eldrichhorrorquickguide.EldritchDescriptionTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/icon_ref_spawn_clues"
                        android:id="@+id/textView4"
                        android:padding="5dp" />
                    <com.justin_letourneau.eldrichhorrorquickguide.EldritchDescriptionTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/icon_ref_monster_surge"
                        android:id="@+id/textView6"
                        android:padding="5dp" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:id="@+id/imageView5"
                            android:src="@drawable/reference_clue" />
                        <com.justin_letourneau.eldrichhorrorquickguide.EldritchDescriptionTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="3"
                            android:id="@+id/clue_number_textView"
                            style="@style/IconText"
                            android:paddingLeft="30dp"
                            android:shadowColor="#ffffff" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:id="@+id/imageView6"
                            android:src="@drawable/reference_monster" />
                        <com.justin_letourneau.eldrichhorrorquickguide.EldritchDescriptionTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="3"
                            android:id="@+id/monster_number_textView"
                            style="@style/IconText"
                            android:paddingLeft="30dp"
                            android:shadowColor="#ffffff" />
                    </LinearLayout>
                </TableRow>
            </TableLayout>
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:src="@drawable/list_divider"
                android:layout_gravity="center"
                android:layout_below="@+id/tableLayout"
                android:layout_alignParentStart="false" />
            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:showDividers="middle|beginning|end"
                >
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/imageView8"
                            android:src="@drawable/horror_reference"
                            android:layout_marginRight="10dp" />
                        <com.justin_letourneau.eldrichhorrorquickguide.EldritchDescriptionTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/icon_ref_horror"
                            android:id="@+id/textView3" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingLeft="10dp">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/imageView9"
                            android:src="@drawable/damage_reference"
                            android:layout_marginRight="10dp" />
                        <com.justin_letourneau.eldrichhorrorquickguide.EldritchDescriptionTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/icon_ref_damage"
                            android:id="@+id/textView5" />
                    </LinearLayout>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="37dp"
                            android:id="@+id/imageView10"
                            android:src="@drawable/spawn_reference"
                            android:layout_gravity="top" />
                        <com.justin_letourneau.eldrichhorrorquickguide.EldritchDescriptionTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/icon_ref_spawn"
                            android:id="@+id/textView7" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingLeft="10dp">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:id="@+id/imageView11"
                            android:src="@drawable/reckoning_reference" />
                        <com.justin_letourneau.eldrichhorrorquickguide.EldritchDescriptionTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/icon_ref_reckoning"
                            android:id="@+id/textView8"/>
                    </LinearLayout>
                </TableRow>
            </TableLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>